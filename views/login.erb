<h2>Login</h2>
<% if @error %>
  <p style="color:red"><%= @error %></p>
<% end %>
<form action="/login" method="POST">
  <label>Email:</label>
  <input type="email" name="email" />
  <br><br>
  <label>Password:</label>
  <input type="password" name="password" />
  <br><br>
  <input type="submit" value="Login" />
</form>
