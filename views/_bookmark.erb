<li class="py-3 flex justify-between items-center border-b border-gray-100 hover:border-blue-200" >
  <a href="<%= bookmark.url %>" target="_blank" class="grow">
  <div class="grow">
    <strong><%= bookmark.title %></strong><br/>
    <p class="text-gray-400"><%= bookmark.url %></p>
  </div>
  </a>
  <div class="flex items-center space-x-2">
    <!-- "Edit" button: pass data via data attributes -->
    <button
      class="hidden px-3 py-1"
      data-bookmark-id="<%= bookmark.id %>"
      data-bookmark-title="<%= bookmark.title %>"
      data-bookmark-url="<%= bookmark.url %>"
      onclick="openEditDialog(this)"
    >
      Edit
    </button>

    <!-- "Delete" form -->
    <form
      action="/bookmarks/<%= bookmark.id %>"
      method="POST"
      class="inline"
    >
      <input type="hidden" name="_method" value="DELETE" />
      <button
        type="submit"
        class="hidden px-3 py-1 text-red-600"
        onclick="return confirm('Are you sure you want to delete this bookmark?')"
      >
        Delete
      </button>
    </form>
  </div>
</li>